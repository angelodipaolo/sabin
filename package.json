    "package:cli": "cd packages/cli && npm pack",
    "install:sabin": "node scripts/install.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "lerna": "^7.0.0",
    "typescript": "^5.0.0"
  }
}